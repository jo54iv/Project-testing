{% extends "tease.twig" %}

{% block content %}
	<h2 class="h2"><a title="{{post.title}}" href="{{post.link}}">{{post.title}}</a></h2>
		<p>{{post.preview.length(25)}}</p>
		{% if post.thumbnail.src %}
			<img alt="Thumbnail" title="Thumbnail" src="{{post.thumbnail.src}}" />
		{% endif %}
{% endblock %}